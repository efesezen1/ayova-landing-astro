---
import LandingLayout from "../../layouts/LandingLayout.astro";
import { LandingFloatingNav } from "../../components/landing/FloatingNav";
import { HeroSection } from "../../components/landing/HeroSection";
import { SolutionsCarousel } from "../../components/landing/SolutionsCarousel";
import { TechnologiesSection } from "../../components/landing/TechnologiesSection";
import { AITransformationSection } from "../../components/landing/AITransformationSection";
import LandingFooter from "../../components/landing/LandingFooter.astro";
import { ContactCTAButton } from "../../components/landing/ContactCTAButton";
import { getTranslations, supportedLanguages, localizedPath } from "../../lib/i18n";
import type { Lang } from "../../lib/i18n";

export const prerender = true;

export function getStaticPaths() {
  return supportedLanguages.map((lang) => ({ params: { lang } }));
}

const lang = Astro.params.lang as Lang;
const t = getTranslations(lang);
---

<LandingLayout lang={lang}>
  <!-- Floating Navbar (scroll-aware, mobile drawer) -->
  <LandingFloatingNav lang={lang} navbar={t.navbar} contactDrawer={t.contactDrawer} client:load />

  <!-- Hero Section (aurora animated background) -->
  <HeroSection hero={t.hero} lang={lang} client:load />

  <!-- Solutions Carousel -->
  <SolutionsCarousel features={t.features} client:load />

  <!-- Technologies: orbital animation + accordion -->
  <TechnologiesSection advanced={t.advanced} client:load />

  <!-- About: Mission & Vision (static) -->
  <section class="w-full py-20 md:py-28">
    <div class="mx-auto max-w-6xl px-4">
      <div class="mb-12 text-center">
        <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
          {t.about.missionVision.title}
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
          {t.about.missionVision.description}
        </p>
      </div>
      <div class="grid gap-8 md:grid-cols-2">
        <!-- Mission -->
        <div class="rounded-xl border border-border/50 bg-card/50 p-8 backdrop-blur-sm">
          <div class="mb-4 flex size-12 items-center justify-center rounded-lg bg-primary/10">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="mb-3 text-xl font-semibold text-foreground">{t.about.mission.title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {t.about.mission.description}
          </p>
        </div>
        <!-- Vision -->
        <div class="rounded-xl border border-border/50 bg-card/50 p-8 backdrop-blur-sm">
          <div class="mb-4 flex size-12 items-center justify-center rounded-lg bg-primary/10">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <h3 class="mb-3 text-xl font-semibold text-foreground">{t.about.vision.title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {t.about.vision.description}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- AI Transformation Section -->
  <AITransformationSection expertise={t.about.expertise} client:load />

  <!-- Service Processes (static) -->
  <section class="w-full py-20 md:py-28">
    <div class="mx-auto max-w-6xl px-4">
      <div class="mb-12 text-center">
        <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
          {t.about.processes.title}
        </h2>
        <p class="mt-4 text-lg text-muted-foreground">
          {t.about.processes.description}
        </p>
      </div>
      <div class="grid gap-8 md:grid-cols-3">
        <!-- Process 0 -->
        <div class="flex flex-col items-center text-center">
          <div class="mb-6 flex size-16 items-center justify-center rounded-2xl bg-primary/10">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div class="mb-2 text-sm font-semibold text-primary">01</div>
          <h3 class="mb-3 text-xl font-semibold text-foreground">{t.about.processes.items[0].title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {t.about.processes.items[0].description}
          </p>
        </div>
        <!-- Process 1 -->
        <div class="flex flex-col items-center text-center">
          <div class="mb-6 flex size-16 items-center justify-center rounded-2xl bg-primary/10">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <div class="mb-2 text-sm font-semibold text-primary">02</div>
          <h3 class="mb-3 text-xl font-semibold text-foreground">{t.about.processes.items[1].title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {t.about.processes.items[1].description}
          </p>
        </div>
        <!-- Process 2 -->
        <div class="flex flex-col items-center text-center">
          <div class="mb-6 flex size-16 items-center justify-center rounded-2xl bg-primary/10">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
          </div>
          <div class="mb-2 text-sm font-semibold text-primary">03</div>
          <h3 class="mb-3 text-xl font-semibold text-foreground">{t.about.processes.items[2].title}</h3>
          <p class="text-muted-foreground leading-relaxed">
            {t.about.processes.items[2].description}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section (static) -->
  <section class="w-full bg-muted/30 py-20 md:py-28">
    <div class="mx-auto max-w-3xl px-4 text-center">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
        {t.cta.title}
      </h2>
      <p class="mt-4 text-lg text-muted-foreground">
        {t.about.missionVision.description}
      </p>
      <div class="mt-8">
        <ContactCTAButton label={t.navbar.contact} contactDrawer={t.contactDrawer} client:load />
      </div>
    </div>
  </section>

  <!-- Footer -->
  <LandingFooter lang={lang} footer={t.footer} navbar={t.navbar} />
</LandingLayout>
