---
import LandingLayout from "../../layouts/LandingLayout.astro";
import { LandingFloatingNav } from "../../components/landing/FloatingNav";
import LandingFooter from "../../components/landing/LandingFooter.astro";
import { getTranslations, supportedLanguages, localizedPath } from "../../lib/i18n";
import type { Lang } from "../../lib/i18n";

export const prerender = true;

export function getStaticPaths() {
  return supportedLanguages.map((lang) => ({ params: { lang } }));
}

const lang = Astro.params.lang as Lang;
const t = getTranslations(lang);
---

<LandingLayout lang={lang} title={`${t.products.title} - Ayova`} description={t.products.subtitle}>
  <LandingFloatingNav lang={lang} navbar={t.navbar} client:load />

  <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
    <!-- Header -->
    <section class="px-4 pt-32 md:px-6">
      <div class="mx-auto max-w-7xl text-center">
        <h1 class="mb-6 mt-20 text-4xl font-bold text-gray-900 dark:text-white md:text-6xl">
          {t.products.title}
        </h1>
        <p class="mx-auto max-w-3xl text-xl text-gray-600 dark:text-gray-300">
          {t.products.subtitle}
        </p>
      </div>
    </section>

    <!-- Product Cards -->
    <section class="pt-20">
      <div class="mx-auto max-w-7xl">
        <div class="grid grid-cols-1 gap-6 px-10 pb-20 lg:grid-cols-2">
          <!-- Alya -->
          <div class="group">
            <div class="flex h-full flex-col rounded-lg border-0 border-white/20 bg-white/10 p-8 shadow-lg shadow-black/5 backdrop-blur-sm transition-all duration-300 dark:border-white/10 dark:bg-white/5 dark:shadow-black/20">
              <div class="mb-6 inline-flex size-16 items-center justify-center overflow-hidden rounded-2xl bg-gradient-to-r from-blue-500 to-cyan-600 transition-transform duration-300">
                <img
                  alt={t.products.alya.name}
                  loading="lazy"
                  width="64"
                  height="64"
                  class="size-full object-contain"
                  src="/alya.png"
                />
              </div>
              <h3 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white md:text-3xl">
                {t.products.alya.name}
              </h3>
              <p class="mb-6 leading-relaxed text-gray-600 dark:text-gray-300">
                {t.products.alya.description}
              </p>
              <div class="mb-6 space-y-3">
                {t.products.alya.features.map((feature) => (
                  <div class="flex items-center space-x-3">
                    <div class="size-2 rounded-full bg-gradient-to-r from-blue-500 to-cyan-600" />
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="mt-auto flex items-center justify-between">
                <a
                  href="https://apps.apple.com/tr/app/alya-vent-to-ai/id6748372716"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center rounded-lg bg-blue-500 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-blue-600"
                >
                  <svg class="mr-2 size-4" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
                  </svg>
                  App Store
                </a>
                <div class="flex items-center space-x-2 text-gray-500 dark:text-gray-400">
                  <span class="text-sm">Powered by AI</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4" aria-hidden="true">
                    <path d="M12 18V5" />
                    <path d="M15 13a4.17 4.17 0 0 1-3-4 4.17 4.17 0 0 1-3 4" />
                    <path d="M17.598 6.5A3 3 0 1 0 12 5a3 3 0 1 0-5.598 1.5" />
                    <path d="M17.997 5.125a4 4 0 0 1 2.526 5.77" />
                    <path d="M18 18a4 4 0 0 0 2-7.464" />
                    <path d="M19.967 17.483A4 4 0 1 1 12 18a4 4 0 1 1-7.967-.517" />
                    <path d="M6 18a4 4 0 0 1-2-7.464" />
                    <path d="M6.003 5.125a4 4 0 0 0-2.526 5.77" />
                  </svg>
                </div>
              </div>
            </div>
          </div>

          <!-- vefAI -->
          <div class="group">
            <div class="flex h-full flex-col rounded-lg border-0 border-white/20 bg-white/10 p-8 shadow-lg shadow-black/5 backdrop-blur-sm transition-all duration-300 dark:border-white/10 dark:bg-white/5 dark:shadow-black/20">
              <div class="mb-6 inline-flex size-16 items-center justify-center overflow-hidden rounded-2xl bg-gradient-to-r from-blue-500 to-cyan-600 transition-transform duration-300">
                <img
                  alt={t.products.vefai.name}
                  loading="lazy"
                  width="64"
                  height="64"
                  class="size-full object-contain"
                  src="/vefai.jpeg"
                />
              </div>
              <h3 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white md:text-3xl">
                {t.products.vefai.name}
              </h3>
              <p class="mb-6 leading-relaxed text-gray-600 dark:text-gray-300">
                {t.products.vefai.description}
              </p>
              <div class="mb-6 space-y-3">
                {t.products.vefai.features.map((feature) => (
                  <div class="flex items-center space-x-3">
                    <div class="size-2 rounded-full bg-gradient-to-r from-blue-500 to-cyan-600" />
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="mt-auto flex items-center justify-between">
                <a
                  href="https://alya-landing.ali-902.workers.dev/en/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center rounded-lg bg-blue-500 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-blue-600"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 size-4" aria-hidden="true">
                    <path d="M11.017 2.814a1 1 0 0 1 1.966 0l1.051 5.558a2 2 0 0 0 1.594 1.594l5.558 1.051a1 1 0 0 1 0 1.966l-5.558 1.051a2 2 0 0 0-1.594 1.594l-1.051 5.558a1 1 0 0 1-1.966 0l-1.051-5.558a2 2 0 0 0-1.594-1.594l-5.558-1.051a1 1 0 0 1 0-1.966l5.558-1.051a2 2 0 0 0 1.594-1.594z" />
                    <path d="M20 2v4" />
                    <path d="M22 4h-4" />
                    <circle cx="4" cy="20" r="2" />
                  </svg>
                  {t.products.cta.learnMore}
                </a>
                <div class="flex items-center space-x-2 text-gray-500 dark:text-gray-400">
                  <span class="text-sm">Powered by AI</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4" aria-hidden="true">
                    <path d="M12 18V5" />
                    <path d="M15 13a4.17 4.17 0 0 1-3-4 4.17 4.17 0 0 1-3 4" />
                    <path d="M17.598 6.5A3 3 0 1 0 12 5a3 3 0 1 0-5.598 1.5" />
                    <path d="M17.997 5.125a4 4 0 0 1 2.526 5.77" />
                    <path d="M18 18a4 4 0 0 0 2-7.464" />
                    <path d="M19.967 17.483A4 4 0 1 1 12 18a4 4 0 1 1-7.967-.517" />
                    <path d="M6 18a4 4 0 0 1-2-7.464" />
                    <path d="M6.003 5.125a4 4 0 0 0-2.526 5.77" />
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <section class="bg-blue-600 px-6 py-20 dark:bg-blue-700">
        <div class="mx-auto max-w-4xl text-center">
          <div class="space-y-8" data-animate>
            <h2 class="text-4xl font-bold leading-tight text-white md:text-5xl lg:text-6xl" data-animate>
              {t.cta.title}
            </h2>
            <div data-animate>
              <a
                href={localizedPath(lang, "/contact")}
                class="inline-block rounded-full border border-white/30 bg-white/90 px-8 py-4 text-lg font-semibold text-blue-600 shadow-lg shadow-white/20 backdrop-blur-sm transition-all duration-300 hover:bg-white hover:text-blue-700 hover:shadow-white/30"
              >
                {t.navbar.contact}
              </a>
            </div>
          </div>
        </div>
      </section>
    </section>
  </div>

  <LandingFooter lang={lang} footer={t.footer} navbar={t.navbar} />
</LandingLayout>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("animate-in");
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.1 }
  );

  document.querySelectorAll("[data-animate]").forEach((el) => {
    el.classList.add("opacity-0", "translate-y-6", "transition-all", "duration-700", "ease-out");
    observer.observe(el);
  });

  const style = document.createElement("style");
  style.textContent = ".animate-in { opacity: 1 !important; transform: translateY(0) !important; }";
  document.head.appendChild(style);
</script>
